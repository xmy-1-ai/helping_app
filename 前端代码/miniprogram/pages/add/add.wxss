/* pages/add/add.wxss */
.page-container {
    margin-top: 10px;
    padding: 10px;
  }
  
  .form-group {
    margin-bottom: 20px;
  }
  
  .label {
    font-size: 16px;
    color: #333;
  }
  
  .input {
    width: 93%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  .textarea {
    width: 93%;
    min-height: 150px;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  
  .btn {
    width: 100%;
    padding: 10px;
    background-color: #007aff;
    color: #fff;
    border: none;
    border-radius: 4px;
    margin-bottom: 10px;
  }